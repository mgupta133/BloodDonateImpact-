<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home_Activity"
    android:background="@android:color/background_light">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/donate"
                android:src="@drawable/download"
                android:text="Donate"
                android:layout_marginTop="71dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_style_layout"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="Donate"
                android:id="@+id/textView16"
                android:layout_below="@+id/donate"
                android:layout_alignRight="@+id/donate"
                android:layout_alignEnd="@+id/donate"
                android:textColor="#ffb50021"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginLeft="25dp" />

            <ImageButton

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/request"
                android:src="@drawable/a"
                android:scaleType="fitXY"
                android:layout_alignTop="@+id/donate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"
                android:paddingLeft="2.75dp"
                android:paddingTop="3dp"
                android:paddingRight="2.75dp"
                android:paddingBottom="1dp"
                android:background="@drawable/button_style_layout" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Need Blood"
                android:id="@+id/textView17"
                android:layout_below="@+id/request"
                android:layout_alignLeft="@+id/request"
                android:layout_alignStart="@+id/request"
                android:gravity="center"
                android:textColor="#ffb50021"
                android:textSize="18dp"
                android:layout_marginRight="25dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/set"
                android:layout_below="@+id/textView16"
                android:src="@drawable/dw"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="0dp"
                android:scaleType="fitXY"
                android:background="@drawable/button_style_layout" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="How to Use"
                android:id="@+id/textView18"
                android:layout_below="@+id/set"
                android:layout_alignLeft="@+id/set"
                android:layout_alignStart="@+id/set"
                android:gravity="center"
                android:textColor="#ffb50021"
                android:textSize="18dp"
                android:layout_marginLeft="0dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/about"
                android:src="@drawable/ab"
                android:layout_above="@+id/textView18"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:background="@drawable/button_style_layout" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="About Us"
                android:id="@+id/textView19"
                android:layout_below="@+id/about"
                android:layout_alignLeft="@+id/about"
                android:layout_alignStart="@+id/about"
                android:gravity="center"
                android:textColor="#ffb50021"
                android:textSize="18dp"
                android:layout_marginRight="25dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
